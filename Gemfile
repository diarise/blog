# Gemfile for Voyage By Luna Blog
source "https://rubygems.org"

# ✅ Use GitHub Pages (includes Jekyll + whitelisted plugins)
gem "github-pages", group: :jekyll_plugins

# ✅ Theme
gem "minima", "~> 2.5"

# ✅ Common optional plugins (these are already supported by GitHub Pages)
gem "jekyll-sitemap"
gem "jekyll-seo-tag"
gem "jekyll-feed"

# ✅ Add WEBrick for local or CI builds (required for Ruby 3+)
gem "webrick", "~> 1.8"

# ✅ Compatible Ruby version
ruby ">= 3.1.0"
